set ssh (echo $SSH_CLIENT)
switch ( uname -s )
	case Darwin
		export HOMEBREW_GITHUB_API_TOKEN=3fe366368034695a68bcee2800acf52f9f908dbd
		set PATH /usr/local/texlive/2015basic/bin/universal-darwin $PATH
		
		if test $ssh -eq ""
			alias exit='killall Terminal;'
		end

		function outdated
			brew outdated > ~/.brewoutdated
			cat ~/.brewoutdated
		end

		function update
			brew update
			outdated
		end

		function upgrade
			brew upgrade
			outdated
		end

		function reinstall
			sh $INSTPATH/install.sh
			source $HOME/.config/fish/config.fish
		end

		function eclim
			sh $INSTPATH/Utils/starteclim.sh
		end

		function config
			vim $INSTPATH/Config/Fish/fish.config
		end

		function info
			python $INSTPATH/Utils/sys_info.py
		end
		info

	case '*'
		echo Unknown OS
end

set HOST (hostname | awk -F. '{ print $1 }')

if test $ssh -eq ""
	set PCOLOR $localColor
else
	set PCOLOR $remoteColor
end

function fish_prompt
	set_color $PCOLOR
	printf $HOST\[" " 
	set_color normal
	python $INSTPATH/Utils/dynamic_path.py
	set_color $PCOLOR
	printf " "\]" > "
	set_color normal
end
set fish_greeting
