set OS (uname -s)

if test $OS -eq "Darwin"
	export HOMEBREW_GITHUB_API_TOKEN=3fe366368034695a68bcee2800acf52f9f908dbd
	alias exit='killall Terminal;'
end

set HOST (hostname | awk -F. '{ print $1 }')

set ssh (echo $SSH_CLIENT)
if test $ssh -eq ""
	set PCOLOR $localColor
else
	echo PCOLOR $remoteColor
end

function fish_prompt
	set_color $PCOLOR
	printf $HOST\[" " 
	set_color normal
	python $INSTPATH/Utils/dynamic_path.py
	set_color $PCOLOR
	printf " "\]": "
	set_color normal
end

